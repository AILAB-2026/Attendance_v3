<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Enable directory browsing for debugging -->
    <directoryBrowse enabled="false" />
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
    
    <!-- Static content settings -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="0.00:01:00" />
      <!-- Remove duplicate MIME types - IIS already has defaults for .json and .js -->
    </staticContent>
    
    <!-- URL Rewrite rules for Node.js API -->
    <rewrite>
      <rules>
        <!-- Health check rule -->
        <rule name="HealthCheck" stopProcessing="true">
          <match url="^health$" />
          <action type="Rewrite" url="http://localhost:7012/health" />
        </rule>
        
        <!-- API routes -->
        <rule name="AttendanceAPI" stopProcessing="true">
          <match url="^api/(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:7012/api/{R:1}" />
        </rule>
        
        <!-- Catch all other API requests (app-relative paths) -->
        <rule name="NodeJSProxy" stopProcessing="true">
          <match url="^(auth|users|facialAuth|projects|sites|leave|payroll|schedule|face|attendance|activities|health|company|settings|faceRecognition)(/.*)?$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:7012/{R:0}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- HTTP Errors -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Security settings -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
      </requestFiltering>
    </security>
    
    <!-- CORS headers -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <add key="NODE_ENV" value="production" />
  </appSettings>
</configuration>